# Server configuration for website {{.WebsiteID}}
# Generated by CMDB Agent at {{.GeneratedAt}}

{{- if .HTTPS.Enabled}}
# HTTPS server block
server {
    listen 443 ssl http2;
    server_name {{range $index, $domain := .Domains}}{{if $index}} {{end}}{{$domain.Domain}}{{end}};

    # SSL certificate
    ssl_certificate {{.CertPath}};
    ssl_certificate_key {{.KeyPath}};

    # SSL configuration
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    {{- if .HTTPS.HSTS}}
    # HSTS
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    {{- end}}

    # Origin configuration
    {{- if eq .Origin.Mode "redirect"}}
    return {{.Origin.RedirectStatusCode}} {{.Origin.RedirectURL}};
    {{- else}}
    location / {
        proxy_pass http://{{.Origin.UpstreamName}};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    {{- end}}
}

{{- if .HTTPS.ForceRedirect}}
# HTTP to HTTPS redirect
server {
    listen 80;
    server_name {{range $index, $domain := .Domains}}{{if $index}} {{end}}{{$domain.Domain}}{{end}};
    return 301 https://$host$request_uri;
}
{{- end}}

{{- else}}
# HTTP server block
server {
    listen 80;
    server_name {{range $index, $domain := .Domains}}{{if $index}} {{end}}{{$domain.Domain}}{{end}};

    # Origin configuration
    {{- if eq .Origin.Mode "redirect"}}
    return {{.Origin.RedirectStatusCode}} {{.Origin.RedirectURL}};
    {{- else}}
    location / {
        proxy_pass http://{{.Origin.UpstreamName}};
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    {{- end}}
}
{{- end}}
